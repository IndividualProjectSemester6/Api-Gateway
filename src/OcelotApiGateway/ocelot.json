{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5112"
  },
  "Routes": [
    // Account microservice:
    {
      "UpstreamPathTemplate": "/gateway/Account",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/Account",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authenticationservice",
          "Port": 80
        }
      ]
    },
    // Movies microservice:
    {
      "UpstreamPathTemplate": "/gateway/Movies",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "DownstreamPathTemplate": "/api/Movies",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [ "Administrator" ]
      }
    },
    {
      "UpstreamPathTemplate": "/gateway/Movies/{id}",
      "UpstreamHttpMethod": [ "Get", "Delete" ],
      "DownstreamPathTemplate": "/api/Movies/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/Movies/",
      "UpstreamHttpMethod": [ "Put" ],
      "DownstreamPathTemplate": "/api/Movies/",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ]
    }
  ]
}
